@startuml
start
:Start scrape_and_save;
repeat
  :scrape_image_url(url);
  -> Success;
  if (final_url valid?) then (yes)
    :download_image(final_url, image_path);
    if (Download success?) then (yes)
      :Return True;
      stop
    else (no)
      :Return False;
      stop
    endif
  else (no)
    :Return False;
    stop
  endif
-> Exception;
:Print Scrape Error;
:Return False;
stop
@enduml